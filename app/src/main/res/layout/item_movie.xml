<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_movie_image"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/movies_image" />

    <TextView
        android:id="@+id/tv_item_movie_title"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

</RelativeLayout>